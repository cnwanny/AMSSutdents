<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:background="@drawable/popwindow_drawable"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_20_dp"
        android:layout_marginEnd="@dimen/margin_20_dp"
        android:layout_marginTop="20dp"
        android:text="重新绑定账号"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/text_youself"
        android:textSize="@dimen/font_size_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/appdownload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_20_dp"
        android:textColor="@color/text_youself"
        android:textSize="@dimen/font_size_16"
        android:text="应用下载"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about" />
</android.support.constraint.ConstraintLayout>